<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:layoutDirection="ltr">

    <TextView
        android:id="@+id/score_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Score:"
        android:textSize="30sp"
        android:layout_below="@id/the_number"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/the_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_below="@id/upper_layout"/>


    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/timer_txt"
        android:orientation="vertical"
        android:padding="4dp">

        <com.nex3z.togglebuttongroup.SingleSelectToggleGroup
            android:id="@+id/group_choices_of_numbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tbgChildSpacingForLastRow="align"
            app:tbgRowSpacing="5dp">

            <ToggleButton
                android:id="@+id/btn1"
                android:textColor="#fff"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:background="@drawable/game_qube_btns"
                android:fontFamily="@font/robotoslab_bold"
                android:padding="5dp"
                android:textOff=""
                android:textOn=""
                android:textSize="40sp"
                android:stateListAnimator="@null"/>

            <ToggleButton
                android:id="@+id/btn2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:background="@drawable/game_qube_btns"
                android:fontFamily="@font/robotoslab_bold"
                android:padding="5dp"
                android:textOff=""
                android:textOn=""
                android:textSize="40sp"
                android:stateListAnimator="@null"
                android:textColor="#fff"/>

            <ToggleButton
                android:id="@+id/btn3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:background="@drawable/game_qube_btns"
                android:fontFamily="@font/robotoslab_bold"
                android:padding="5dp"
                android:textOff=""
                android:textOn=""
                android:textSize="40sp"
                android:stateListAnimator="@null"
                android:textColor="#fff"/>

            <ToggleButton
                android:id="@+id/btn4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:background="@drawable/game_qube_btns"
                android:fontFamily="@font/robotoslab_bold"
                android:padding="5dp"
                android:textOff=""
                android:textOn=""
                android:textSize="40sp"
                android:stateListAnimator="@null"
                android:textColor="#fff"/>
        </com.nex3z.togglebuttongroup.SingleSelectToggleGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/operators_layot">

        <com.nex3z.togglebuttongroup.SingleSelectToggleGroup
            android:id="@+id/group_choices_of_operators"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ToggleButton
                android:id="@+id/plus"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/selector_plus_img"
                android:tag="plus"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/minus"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/selector_minus_img"
                android:tag="minus"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/mul"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/selector_multipliction_img"
                android:tag="mul"
                android:textOff=""
                android:textOn="" />
            <ToggleButton
                android:id="@+id/div"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/selector_division_img"
                android:tag="div"
                android:textOff=""
                android:textOn="" />


        </com.nex3z.togglebuttongroup.SingleSelectToggleGroup>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/upper_layout">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@color/Transparent"
        android:src="@drawable/ic_back"
        android:id="@+id/game_back_btn"
        android:contentDescription=""/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_question_mark"
            android:layout_toStartOf="@id/restart_level"
            android:background="@color/Transparent"
            android:contentDescription=""
            android:id="@+id/hint_btn"/>
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/Transparent"
            android:src="@drawable/restart_img"
            android:layout_gravity="center"
            android:id="@+id/restart_level"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

</LinearLayout>
    <ImageButton
        android:id="@+id/start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/operators_layot"
        android:layout_margin="10dp"
        android:src="@drawable/ic_play_button"
        android:background="@color/Transparent"
        />

    <TextView
        android:id="@+id/timer_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/score_tv"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="TextView"
        android:textSize="24sp"
        tools:text="10:00"
        android:visibility="invisible"/>


</RelativeLayout>