<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/upper_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/game_back_btn_levels_screen"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:background="@color/Transparent"
            android:src="@drawable/ic_back"
            android:clickable="true"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/game_logo"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:contentDescription=""
        android:src="@drawable/makeiteven_v2" />

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/recycler_levels_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game_logo"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:layout_above="@id/upper_layout"/>
</RelativeLayout>
