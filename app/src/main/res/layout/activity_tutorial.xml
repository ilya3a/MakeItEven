<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:id="@+id/main_layot">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/totorial_textview"
        android:text="Test run"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="@color/blue"/>

    <ImageSwitcher
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totorialImageSwicher"
        android:layout_below="@+id/totorial_textview"
        android:layout_above="@id/btns_layout">
    </ImageSwitcher>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/btns_layout">
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Back"
            android:textStyle="bold"
            android:background="@drawable/fragment_background"
            android:id="@+id/back_btn"
            android:visibility="gone"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Next"
            android:textStyle="bold"
            android:background="@drawable/fragment_background"
            android:id="@+id/next_btn_ib"
            android:layout_toEndOf="@+id/back_btn"
            android:layout_marginStart="20dp"/>

    </RelativeLayout>

</RelativeLayout>