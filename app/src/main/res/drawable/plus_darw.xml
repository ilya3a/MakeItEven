<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Draw the vertical line, left edge move to right 100dp and right edge move to fight 200dp. -->
        <item
            android:left="50dp"
            android:right="50dp"
            android:top="10dp"
            android:bottom="90dp">
            <shape android:shape="rectangle">
                <corners android:radius="5dp"/>
                <size android:width="20dp" />
                <solid android:color="#FFC227" />
            </shape>
        </item>
        <!-- Draw the horizontal line, top edge move down 100dp and bottom edge move down 200dp. -->
        <item
            android:top="40dp"
            android:bottom="50dp"
            android:right="10dp"
            android:left="10dp">
            <shape>
                <corners android:radius="5dp"/>
                <size android:height="20dp" />
                <solid android:color="#FFC227" />
            </shape>
        </item>
        <item
            android:left="50dp"
            android:right="50dp"
            android:top="90dp"
            android:bottom="10dp">
            <shape android:shape="rectangle">
                <corners android:radius="5dp"/>
                <size android:width="20dp" />
                <solid android:color="#FFC227" />
            </shape>
        </item>
    </layer-list>
    </item>
<item android:state_checked="false">
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Draw the vertical line, left edge move to right 100dp and right edge move to fight 200dp. -->
    <item
        android:left="50dp"
        android:right="50dp"
        android:top="0dp" android:bottom="0dp">
        <shape>
            <corners android:radius="5dp"/>
            <size android:width="20dp" />
            <solid android:color="#808080" />
        </shape>
    </item>
    <!-- Draw the horizontal line, top edge move down 100dp and bottom edge move down 200dp. -->
    <item
        android:top="50dp"
        android:bottom="50dp"
        android:right="0dp"
        android:left="0dp">
        <shape>
            <corners android:radius="5dp"/>
            <size android:height="20dp" />
            <solid android:color="#808080" />
        </shape>
    </item>
</layer-list>
</item>
</selector>
